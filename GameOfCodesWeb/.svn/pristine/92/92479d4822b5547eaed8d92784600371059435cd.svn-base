package com.misys.gameofcodes.connection;


import com.mongodb.DB;
import com.mongodb.DBCollection;
import com.mongodb.DBObject;
import com.mongodb.MongoClient;

public abstract class  MongoClientProvider {
		
	private static MongoClient mongoClient;
	private static String mongoIpAddress = "localhost";
	private static int mongoPort = 27017;	
	
    
    private DB getMongoDB(){
        if(mongoClient == null){
        	mongoClient = new MongoClient( mongoIpAddress, mongoPort);
        }
        
    }

	
}